<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiWrongBindTest.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <VerticalStackLayout
        Padding="30"
        Spacing="25"
        VerticalOptions="Center">
        <Label HorizontalOptions="Center" Text="There's a Binding failure on the first page, but it is not getting reported in the XAML Binding Failures window" />
        <Label Text="{Binding Wrong.Name}" />
        <Button
            Clicked="OnGoToSecondPage"
            HorizontalOptions="Center"
            Text="Go to Second Page" />
    </VerticalStackLayout>
</ContentPage>
